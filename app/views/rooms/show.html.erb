 <% @RoomUsers.each do |r| %>
       <h2><%= r.user.name %></h2>
 <% end %>
 <div class="chats">
   <div class="chat">
     <% if @messages.present? %>
       <% @messages.each do |m| %>
         <div class="chat-box">
           <div class="chat-text">
             <%= m.content %>
           </div>
         </div>
       <% end %>
       <%else%>
         <p>メッセージはまだありません</p>
     <% end %>
   </div>
   <div class="posts">
     <%= form_with model: @message, local: true do |f| %>
       <%= f.text_field :content %>
       <%= f.hidden_field :room_id, value: @room.id %>
       <%= f.submit "送信する" %>
     <% end %>
   </div>

 </div>
</div>