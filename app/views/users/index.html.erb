<div class="container">
  <div class="row">
    <div class="col-md-3">
      <h2>User info</h2>
      <%= render 'info', user: current_user %>
      <h2 class="mt-3">New book</h2>
      <%= render 'books/form', book: Book.new %>
    </div>
    <div class="col-md-8 offset-md-1">
      <% if user_signed_in? %>
        <%= form_with url: search_path, method: :get, local: true do |f| %>
          <%= f.text_field 'search[value]' %>
          <%= f.select 'search[model]', options_for_select({"User" => "user", "Book" => "book"}) %>
          <%= f.select 'search[how]', options_for_select({ "完全一致" => "match", "前方一致" => "forward", "後方一致" => "backward", "部分一致" => "partical" }) %>
          <%= f.submit '検索' %>
        <% end %>
      <% end %>
      <h2>Users</h2>
      <div><%= link_to "グループを作成する", new_group_path %> | <%= link_to "グループ一覧", groups_path %></div>
      <%= render 'index',users: @users %>
    </div>
  </div>
</div>

